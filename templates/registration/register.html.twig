{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block body %}
    <div class="m-auto text-center">
        <div class="py-12 border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Rejestracja
            </h1>

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {'attr':{'class': 'border rounded-md'}}) }}
            {{ form_row(registrationForm.plainPassword, {'attr':{'class' : 'border rounded-md'}}) }}
            {{ form_row(registrationForm.agreeTerms) }}
            {#<input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">#}
            <button type="submit"
                    class="uppercase mt-15 bg-blue-500 text-gray-100 text-lg w-1/6 font-extrabold py-4 px-4 rounded-3xl">
                Zarejestruj
            </button>

            {{ form_end(registrationForm) }}


        </div>
    </div>
{% endblock %}


