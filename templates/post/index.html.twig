{% extends 'base.html.twig' %}

{% block title %}

    Wszystkie wpisy

{% endblock %}

{% block body %}

    {# latest posts #}
    <div class="my-14">
        <h1 class="text-6xl tracking-tighter font-bold mb-6">
            Ostatnie wpisy
        </h1>
        <p class="mb-8 text-gray-500">
            Mikroblog utworzony za pomocą Symfony i Tailwind CSS
        </p>
        <hr/>
    </div>

    {# posts #}

    <div class="my-14 flex flex-col md:flex-row">
        <p class="mb-8 text-gray-500 mr-20">
            18/08/2023
        </p>
        <div class="space-y-4">
            <h1 class="text-3xl font-bold tracking-tighter">
                Tytuł wpisu
            </h1>
            <p class="text-gray-500">
                Lorem ipsum dolor sit amet, consectetur adipisicing elit. A aliquam aliquid blanditiis consequatur dicta
                doloribus error eveniet ex fugit, hic, impedit itaque libero nemo porro quibusdam quidem quisquam
                veniam, voluptas.
            </p>
            <p>
                <a href="{{ path('posts.show', {id:1}) }}" class="text-red-500 hover:text-red-900 mt-8">Czytaj
                    więcej</a>
            </p>
            <div class="flex">
                <a href="{{ path('posts.edit', {id:1}) }}" title="edit" class="mr-2 cursor-pointer">
                    {{ include('svg_icons/edit_icon.html.twig') }}
                </a>

                <form method="POST" action="{{ path('posts.delete', {id:1}) }}">
                    <button type="submit" href="{{ path('posts.delete',{id:1}) }}"
                            onclick="return confirm('Jesteś pewny?')"
                            title="delete" class="cursor-pointer">
                        {{ include('svg_icons/delete_icon.html.twig') }}
                    </button>
                </form>

            </div>
        </div>
    </div>
    <hr/>

{% endblock %}



