{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
    <div class="m-auto text-center">
        <div class="py-12 border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Logowanie
            </h1>
            {% if error %}
                <div class="text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <div class="mb-6">
                    <label class="block text-gray-800 required" for="username">Adres e-mail</label>
                    <input class="border rounded-md" type="text" id="username" name="_username"
                           value="{{ last_username }}">
                </div>

                <div>
                    <label class="block text-gray-800 required" for="password">Has≈Ço:</label>
                    <input class="border rounded-md" type="password" id="password" name="_password">
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit"
                        class="uppercase mt-5 bg-blue-500 text-gray-100 text-lg w-1/6 font-extrabold py-4 px-4 rounded-3xl">
                    Zaloguj
                </button>
            </form>
        </div>
    </div>


{% endblock %}
